<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
	<RelativeLayout
        android:id="@+id/rl_header_content"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >
       <com.quange.views.EmojiTextView
	        android:id="@+id/headerTitle"
	        android:layout_width="match_parent"
	        android:layout_height="32dp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/backBtn"
	        android:gravity="center"
	        android:text="@string/homeshare"
	        android:textColor="@color/black"
	        android:textSize="18sp" >

	        </com.quange.views.EmojiTextView>
	        <com.sina.weibo.sdk.widget.LoginButton
            android:id="@+id/sinaLoginBtn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
	     <View
                    
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/item_under_line_shadow" />
    </RelativeLayout>
</LinearLayout>
