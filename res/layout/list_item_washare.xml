<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/img_washare"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginBottom="4dip"
        android:layout_weight="1"
        />
    <com.quange.views.EmojiTextView
        android:id="@+id/etv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:layout_marginBottom="4dip"
        android:lineSpacingExtra="3dp"
        android:textSize="12sp"
        android:textColor="#222222"/>
    
    <LinearLayout 
	    android:id="@+id/ll_bottombar"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:background="@color/white"
	   
	    android:orientation="vertical">

	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#dfdfdf" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal">
	
	        <LinearLayout
	            android:id="@+id/ll_bottombar_retweet"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            
	            android:clickable="true"
	            android:gravity="center"
	            android:orientation="horizontal">
	
	            <ImageView
	                android:layout_width="16dp"
	                android:layout_height="16dp"
	                android:scaleType="centerCrop"
	                android:src="@drawable/sina_bar_icon_redirect" />
	
	            <TextView
	                android:id="@+id/tv_redirect"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="转发"
	                android:textColor="#cccccc"
	                android:textSize="14sp" />
	
	        </LinearLayout>
	
	        <ImageView
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:layout_gravity="center_vertical"
	            android:layout_marginBottom="8dp"
	            android:layout_marginTop="8dp"
	            android:background="#f2f2f2" />
	
	        <LinearLayout
	            android:id="@+id/ll_bottombar_comment"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            
	            android:clickable="true"
	            android:gravity="center"
	            android:orientation="horizontal">
	
	            <ImageView
	                android:layout_width="16dp"
	                android:layout_height="16dp"
	                android:scaleType="centerCrop"
	                android:src="@drawable/sina_bar_icon_comment" />
	
	            <TextView
	                android:id="@+id/tv_comment"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="评论"
	                android:textColor="#cccccc"
	                android:textSize="14sp" />
	
	        </LinearLayout>
	
	        <ImageView
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            
	            android:layout_gravity="center_vertical"
	            android:layout_marginBottom="8dp"
	            android:layout_marginTop="8dp"
	            android:background="#f2f2f2" />
	
	        <LinearLayout
	            android:id="@+id/ll_bottombar_attitude"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	          
	            android:clickable="true"
	            android:gravity="center"
	            android:orientation="horizontal">
	
	            <ImageView
	                android:layout_width="16dp"
	                android:layout_height="16dp"
	                android:scaleType="centerCrop"
	                android:src="@drawable/sina_bar_icon_unlike" />
	
	            <TextView
	                android:id="@+id/tv_feedlike"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="赞"
	                android:textColor="#cccccc"
	                android:textSize="14sp" />
	
	        </LinearLayout>
	    </LinearLayout>
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#dfdfdf" />
	    
    </LinearLayout>
	    
    <RelativeLayout 
        android:id="@+id/rl_bottom_userInfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        
        <com.quange.views.RoundImageView
            android:id="@+id/userIcon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            
            android:layout_marginLeft="12dip"
            android:layout_marginTop="5dip" >
             
        </com.quange.views.RoundImageView>
         <TextView
        android:id="@+id/userNickName"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
       
        android:layout_marginTop="5dip"
     	android:layout_marginLeft="60dip"
        android:textSize="14sp"
        android:textColor="#FFA500"/>
         
          <TextView
        android:id="@+id/createTime"
        android:layout_width="wrap_content"
        android:layout_height="25dip"
     
        android:layout_marginTop="25dip"
        android:layout_marginLeft="60dip"
        android:textSize="12sp"
        android:textColor="#c3c3c3"/>
        
    </RelativeLayout>
    

</LinearLayout>
