<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
   
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>

     <!-- Variant of {@link #Theme} with no title bar -->
    <style name="AppTheme.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Variant of {@link #Theme} that has no title bar and no status bar.  This theme
         sets {@link android.R.attr#windowFullscreen} to true.  -->
    <style name="AppTheme.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Lecturer Vip Buy Dialog -->
    <style name="selectBrush_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- android:backgroundDimEnabled 标识是否允许Dialog的背景变暗，false 背景为无，Dialog外围纯透明，没有灰色半透明效果；为true时，Dialog外围纯有灰色半透明效果 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="share_th_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">5dp</item>
    </style>
</resources>
